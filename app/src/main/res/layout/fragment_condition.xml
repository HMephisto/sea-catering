<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="32dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_dialog_frag">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/registerConditionTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/screen_margin"
        android:paddingTop="@dimen/large_margin"
        android:text="Daftar Berhasil!"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"  />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/registerConditionContent"
        android:layout_width="@dimen/zero_dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/screen_margin"
        android:paddingTop="@dimen/normal_margin"
        android:paddingBottom="@dimen/large_margin"
        android:text="Anda akan ditujukan ke halaman masuk!"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/registerConditionTitle" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/registerConditionButton"
        android:layout_width="@dimen/zero_dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/screen_margin"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textAllCaps="false"
        app:cornerRadius="8dp"
        android:paddingVertical="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/registerConditionContent" />


</androidx.constraintlayout.widget.ConstraintLayout>