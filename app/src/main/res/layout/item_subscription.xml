<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/itemCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent"
        >
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/menuImage"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            app:shapeAppearanceOverlay="@style/RoundedImageViewStyle"
            android:src="@drawable/meal_custom"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/menuName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="16sp"
                android:text="Indonesian Traditional Food"
                android:padding="8dp"/>
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/subStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="textEnd"
                android:padding="8dp"
                android:text="ACTIVE"/>
        </LinearLayout>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/mealPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Total Price : Rp.100.000,00"
            android:padding="8dp"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/mealType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Meal Type : Breakfast, Lunch, Dinner"
            android:padding="8dp"/>
        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Delivery Days : "
            android:padding="8dp"/>
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/deliveryDays"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Monday, Tuesday, Wednesday, Thursday, Friday, Saturday, Sunday"
            android:paddingEnd="8dp"
            android:paddingStart="16dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"

            >
            <com.google.android.material.button.MaterialButton
                android:id="@+id/tooglePause"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginRight="8dp"
                android:text="Pause"
                android:backgroundTint="@color/primary"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/cancelButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Cancel"
                android:backgroundTint="@color/error"/>

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>